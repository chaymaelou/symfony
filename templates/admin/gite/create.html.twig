{% block body %}
 <h1>Ajouter un nouveau gite</h1>  
{{ form_start(formGite) }}
<div class="row">
<div class="col-md-6">

{{ form_row(formGite.nom) }}

</div>
</div>
<div class="row">
<div class="col-md-3">

{{ form_row(formGite.surface) }}

</div>
</div>
<div class="row">
<div class="col-md-3">

{{ form_row(formGite.chambre) }}

</div>
</div>
<div class="row">
<div class="col-md-3">

{{ form_row(formGite.couchage) }}

</div>
</div>
<div class="row">
<div class="col-md-12">

{{ form_row(formGite.description) }}

</div>
</div>
<div class="form-group">
